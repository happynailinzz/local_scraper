# Server/docker example env (DO NOT commit real secrets)

# Required for AI summaries (unless DRY_RUN=true or AI_DISABLED=true)
AI_API_KEY=sk-your-key

# Feishu group bot webhook (optional)
FEISHU_WEBHOOK_URL=
FEISHU_NOTIFY_MODE=digest
FEISHU_CARD_IMAGE_URL=

# Optional: public URL for WebUI (used in digest card "查看全部")
WEBUI_PUBLIC_URL=

# Filters
DAYS_LOOKBACK=7
KEYWORD_REGEX=(系统|软件|平台|大数据|AI|采购|招标)

# Dedupe
DEDUPE_STRATEGY=title

# Runtime controls
MAX_ITEMS_PER_RUN=50
LOOP_DELAY=1
AI_DISABLED=false
DRY_RUN=false

# Pagination limits
MAX_PAGES_TOTAL=200
MAX_PAGES_PER_CATEGORY=50

# Adaptive throttling (optional)
ADAPTIVE_DELAY_THRESHOLD_PAGES=10
BATCH_SIZE=50
DELAY_INCREMENT_SECONDS=1
MAX_LOOP_DELAY_SECONDS=10

# Network
HTTP_TIMEOUT_MS=30000
HTTP_RETRY_COUNT=3
HTTP_RETRY_INTERVAL_MS=2000

# Optional: use a China-based relay for zcpt access (for overseas servers)
ZCPT_RELAY_BASE_URL=
ZCPT_RELAY_TOKEN=

# Relay service (enable ONLY on the China relay server)
RELAY_ENABLED=false
RELAY_TOKEN=
RELAY_TIMEOUT_MS=30000
RELAY_USER_AGENT=

# AI configuration
AI_BASE_URL=https://api.yuweixun.site/v1
AI_MODEL=llama-3.3-70b-versatile
AI_TEMPERATURE=0.5
AI_TIMEOUT_MS=60000
AI_RETRY_COUNT=2
AI_RETRY_INTERVAL_MS=3000

# Logging
LOG_LEVEL=info
LOG_JSON=true

# WebUI (Basic Auth)
WEBUI_USERNAME=admin
WEBUI_PASSWORD=change-me
WEBUI_PUBLISH_PORT=5682
WEBUI_HOST=0.0.0.0
WEBUI_PORT=5682

# Container timezone
TZ=Asia/Shanghai

# DB path (inside container)
DB_PATH=/app/data/zhaocai.db
